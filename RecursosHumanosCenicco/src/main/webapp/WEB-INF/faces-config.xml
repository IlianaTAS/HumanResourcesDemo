<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<!-- JSF AND SPRING INTEGRATION -->
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>

	<managed-bean>
		<managed-bean-name>loginController</managed-bean-name>
		<managed-bean-class>com.lam.recursoshumanoscenicco.controller.LoginController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
        
	<managed-bean>
		<managed-bean-name>puestoController</managed-bean-name>
		<managed-bean-class>com.lam.recursoshumanoscenicco.controller.PuestoController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
                <managed-property>
			<property-name>puestoService</property-name>
			<value>#{puestoService}</value>
		</managed-property>
	</managed-bean>
        
        <managed-bean>
		<managed-bean-name>clienteController</managed-bean-name>
		<managed-bean-class>com.lam.recursoshumanoscenicco.controller.ClienteController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
                <managed-property>
			<property-name>clienteService</property-name>
			<value>#{clienteService}</value>
		</managed-property>
	</managed-bean>
        
        <managed-bean>
		<managed-bean-name>examenController</managed-bean-name>
		<managed-bean-class>com.lam.recursoshumanoscenicco.controller.ExamenTecnicoController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
                <managed-property>
			<property-name>examenService</property-name>
			<value>#{examenService}</value>
		</managed-property>
                <managed-property>
			<property-name>puestoService</property-name>
			<value>#{puestoService}</value>
		</managed-property>
	</managed-bean>


	<lifecycle>
		<phase-listener>com.lam.recursoshumanoscenicco.controller.LoginController</phase-listener>
	</lifecycle>
</faces-config>